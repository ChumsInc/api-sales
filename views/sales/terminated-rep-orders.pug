div(style="font-family: sans-serif;")
    h2 Orders for Terminated Reps
    hr
    table(style="font-size: small" cellpadding="3" cellspacing="0")
        thead
            tr
                th(style="padding: 0.25rem 1rem;") Sales Order No
                th(style="padding: 0.25rem 1rem;") Customer Account
                th(style="padding: 0.25rem 1rem;") Customer Name
                th(style="padding: 0.25rem 1rem;") Order Total
                th(style="padding: 0.25rem 1rem;") Ship Date
                th(style="padding: 0.25rem 1rem;") Rep
                th(style="padding: 0.25rem 1rem;") Rep Name
        tbody
            for row in orders
                tr
                    td(style="padding: 0.25rem 1rem;") #{row.SalesOrderNo}
                    td(style="padding: 0.25rem 1rem;") #{row.CustomerNo}
                    td(style="padding: 0.25rem 1rem;") #{row.BillToName}
                    td(style="padding: 0.25rem 1rem;") #{row.OrderTotal}
                    td(style="padding: 0.25rem 1rem;") #{row.ShipExpireDate}
                    td(style="padding: 0.25rem 1rem;") #{row.SalespersonNo}
                    td(style="padding: 0.25rem 1rem;") #{row.SalespersonName}

    hr

    div
        small
